<div class="container image-gallery-show-container">
	<% if 'landscape' == @gallery_image.image_type %>
		<div class="carousel slide" data-ride="carousel" id="show-carousel-landscape">
		  <div class="carousel-inner show-carousel-inner-landscape mx-auto">
		  	<% GalleryImage.all_landscapes.each_with_index do |img_path| %>
		  		<% class_extras = img_path == @gallery_image.file_name ? "active show-carousel-item" : "show-carousel-item" %>
			    <div class="carousel-item <%= class_extras %>">
			    	<%= image_tag(img_path, class: "d-block img-fluid show-image") %>
			    	<% gi = GalleryImage.find_by_file_name(img_path) %>
			    	<div class="carousel-caption d-block show-carousel-metadata">
							<p class="show-carousel-title-landscape"><%= gi.image_title %></p>
							<p class="show-carousel-description"><%= gi.image_description %></p>
			    	</div>
			    </div>
			  <% end %>
		  </div>
		  <a class="carousel-control-prev" href="#show-carousel-landscape" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#show-carousel-landscape" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
  	</div>
	<% elsif 'portrait' == @gallery_image.image_type %>
		<div class="carousel slide" data-ride="carousel" id="show-carousel-portrait">
		  <div class="carousel-inner show-carousel-inner-portrait mx-auto">
		  	<% GalleryImage.all_portraits.each_with_index do |img_path| %>
		  		<% class_extras = img_path == @gallery_image.file_name ? "active show-carousel-item" : "show-carousel-item" %>
			    <div class="carousel-item <%= class_extras %>">
			    	<%= image_tag(img_path, class: "d-block img-fluid show-image") %>
			    	<% gi = GalleryImage.find_by_file_name(img_path) %>
			    	<div class="carousel-caption d-block show-carousel-metadata">
							<p class="show-carousel-title-portrait"><%= gi.image_title %></p>
							<p class="show-carousel-description"><%= gi.image_description %></p>
			    	</div>
			    </div>
			  <% end %>
		  </div>
		  <a class="carousel-control-prev" href="#show-carousel-portrait" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#show-carousel-portrait" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
  	</div>
	<% end %>
</div>

<script>
	$(function () {
		$('#show-carousel-landscape').carousel({interval: 0})
	})
	$(function () {
		$('#show-carousel-portrait').carousel({interval: 0})
	})
</script>
